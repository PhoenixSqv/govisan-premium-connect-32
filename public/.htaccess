# --- Govisan .htaccess (SPA + HTTPS + WWW + cache + security) ---

<IfModule mod_rewrite.c>
  RewriteEngine On

  # 1) Redirección única a HTTPS + WWW
  #    (cámbialo más abajo por la versión sin WWW si la prefieres)
  RewriteCond %{HTTPS} !=on [OR]
  RewriteCond %{HTTP_HOST} !^www\.govisan\.com$ [NC]
  RewriteRule ^ https://www.govisan.com%{REQUEST_URI} [R=301,L]

  # 2) SPA fallback (Vite/React)
  RewriteBase /
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  RewriteRule . /index.html [L]
</IfModule>

# 3) Cache estático
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/html "access plus 1h"
  ExpiresByType text/css "access plus 7d"
  ExpiresByType application/javascript "access plus 7d"
  ExpiresByType image/* "access plus 30d"
  ExpiresByType font/* "access plus 30d"
</IfModule>

# 4) Compresión (si está disponible)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/css application/javascript application/json application/xml image/svg+xml
</IfModule>

# 5) Cabeceras de seguridad básicas
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Permissions-Policy "camera=(), geolocation=(), microphone=()"
  # Activa HSTS cuando confirmes todo OK en HTTPS:
  # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# 6) Extras útiles
Options -Indexes
FileETag None
